[core]
    whitespace=fix,-index-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/sven/.gitignore

[color]
    ui = auto

[alias]
    st = status
    br = branch
    co = checkout
    tip = branch -v
    graph = log --graph --format=one --branches --tags
    clog = log --format=compact
    new = log ORIG_HEAD.. --stat --no-merges
    changed = diff --stat
    serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git

    # flow
    feature = flow feature
    release = flow release
    hotfix = flow hotfix
    support = flow support

[push]
    default = matching

[branch]
    autosetupmerge = always

[pack]
    threads = 0

[diff]
    renamelimit = 0

[pretty]
    one = format:%C(yellow)%h%C(cyan)%d %Creset %s %C(red)%cn %C(magenta)%cr%Creset
    compact = format:%C(yellow)%h%Creset %s %C(magenta)%ar%Creset
